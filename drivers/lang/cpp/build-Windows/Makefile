# GNU Make workspace makefile autogenerated by Premake

!IFNDEF config
config = debug
!ENDIF

!IFNDEF verbose
SILENT = @
!ENDIF

!IF "$(config)" == "debug"
bake_config = debug
!ENDIF
!IF "$(config)" == "release"
  bake_config = release
!ENDIF

PROJECTS = bake_lang_cpp

target_make_file = bake_lang_cpp.mak

!IFDEF use_llvm
target_make_file = bake_lang_cpp_llvm.mak
!ENDIF

.PHONY: clean $(PROJECTS) 

all: $(PROJECTS)


bake_lang_cpp:
!IF "$(bake_config)" != ""
	@ECHO "==== Building bake_lang_cpp ($(bake_config)) ===="
	$(MAKE) /NOLOGO /F $(target_make_file) config=$(bake_config) all
!ENDIF

clean:
	$(MAKE) /NOLOGO /F $(target_make_file)clean

help:
	@ECHO "Usage: nmake /f [config=name] [target]"
	@ECHO ""
	@ECHO "CONFIGURATIONS:"
	@ECHO "  debug"
	@ECHO "  release"
	@ECHO ""
	@ECHO "TARGETS:"
	@ECHO "   all (default)"
	@ECHO "   clean"
	@ECHO ""
